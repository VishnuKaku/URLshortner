{
    "name": "url-shortener",
    "version": "1.0.0",
    "description": "A custom URL shortener with advanced analytics and features.",
    "main": "dist/server.js",
    "type": "module",
    "scripts": {
        "start": "node dist/server.js",
        "dev": "nodemon src/server.ts",
        "build": "tsc",
        "test": "NODE_OPTIONS=--experimental-vm-modules jest --config tests/config/jest.config.ts",
        "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --config tests/config/jest.config.ts --watch",
        "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --config tests/config/jest.config.ts --coverage",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "format:check": "prettier --check \"src/**/*.ts\"",
        "prepare": "npm run build"
    },
    "dependencies": {
        "@types/express": "^4.17.21",
        "@types/geoip-lite": "^1.4.4",
        "@types/passport": "^1.0.17",
        "@types/passport-google-oauth20": "^2.0.16",
        "bcrypt": "^5.1.1",
        "body-parser": "^1.20.2",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.5",
        "geoip-lite": "^1.4.10",
        "google-auth-library": "^9.15.0",
        "ioredis": "^5.3.2",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^7.5.2",
        "nanoid": "^5.0.9",
        "passport-google-oauth20": "^2.0.0",
        "redis": "^4.6.7",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.1.6",
        "winston": "^3.17.0"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.26.0",
        "@babel/preset-typescript": "^7.26.0",
        "@jest/types": "^29.6.3",
        "@types/axios": "^0.9.36",
        "@types/bcrypt": "^5.0.0",
        "@types/ioredis": "^5.0.0",
        "@types/ioredis-mock": "^8.2.5",
        "@types/jest": "^29.5.14",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/node": "^20.17.10",
        "@types/supertest": "^6.0.2",
        "@types/ua-parser-js": "^0.7.39",
        "@typescript-eslint/eslint-plugin": "^6.3.0",
        "@typescript-eslint/parser": "^6.1.0",
        "axios": "^1.7.9",
        "babel-jest": "^29.7.0",
        "babel-preset-env": "^1.7.0",
        "eslint": "^8.45.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "ioredis-mock": "^8.9.0",
        "jest": "^29.7.0",
        "mongodb-memory-server": "^8.16.1",
        "nodemon": "^3.0.1",
        "prettier": "^3.0.1",
        "supertest": "^6.3.3",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.1",
        "ua-parser-js": "^2.0.0"
    },
    "jest": {
        "preset": "ts-jest/presets/default-esm",
        "testEnvironment": "node",
        "transformIgnorePatterns": [
            "/node_modules/(?!(nanoid|ua-parser-js)/)"
        ],
        "extensionsToTreatAsEsm": [
            ".ts"
        ]
    }
}
